{
  "name": "node-red-contrib-keycloak-admin-client",
  "version": "0.0.1",
  "description": "NodeRed keycloak admin adapter",
  "author": {
    "name": "naimo84",
    "email": "git@neumann-benjamin.de"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "contributors": [
    {
      "name": "naimo84",
      "email": "git@neumann-benjamin.de"
    }
  ],
  "homepage": "https://github.com/naimo84/node-red-contrib-keycloak-admin-client",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/naimo84/node-red-contrib-keycloak-admin-client/blob/master/LICENSE"
    }
  ],
  "keywords": [
    "node-red"
  ],
  "node-red": {
    "nodes": {
      "keycloak-config": "dist/keycloak-config.js",
      "keycloak-clients": "dist/keycloak-clients.js",
      "keycloak-realms": "dist/keycloak-realms.js",
      "keycloak-identity-providers": "dist/keycloak-identity-providers.js",
      "keycloak-client-scopes": "dist/keycloak-client-scopes.js",
      "keycloak-components": "dist/keycloak-components.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naimo84/node-red-contrib-keycloak-admin-client"
  },
  "scripts": {
    "start": "node-red",
    "release": "standard-version",
    "release-minor": "standard-version --release-as minor",
    "build": "gulp",
    "dev": "gulp develop"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "handlebars": "^4.7.6",
    "keycloak-admin": "^1.14.6",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.8",
    "@types/node-red": "^1.1.1",
    "chai": "4.2.0",
    "chai-like": "1.1.1",
    "chai-things": "0.2.0",
    "commitlint": "^8.3.5",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.4.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-watch": "^5.0.1",
    "husky": "4.0.10",
    "mocha": "7.0.0",
    "node-red": "1.2.7",
    "node-red-node-test-helper": "^0.2.5",
    "nodemon": "^1.19.4",
    "sinon": "8.1.0",
    "standard-version": "^7.1.0",
    "typescript": "^3.7.5"
  },
  "commitlint": {
    "format": {
      "helpUrl": "test"
    },
    "rules": {
      "body-leading-blank": [
        1,
        "always"
      ],
      "footer-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        72
      ],
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "never",
        [
          "sentence-case",
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "2500ms",
    "verbose": true,
    "ext": "js,html"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit"
    }
  },
  "funding": {
    "type": "paypal",
    "url": "https://paypal.me/NeumannBenjamin"
  }
}
